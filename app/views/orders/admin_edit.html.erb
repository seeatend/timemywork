

<% content_for :breadcrumb do %>
    <ul class="m-subheader__breadcrumbs m-nav m-nav--inline">
      <li class="m-nav__item m-nav__item--home">
        <a href="#" class="m-nav__link m-nav__link--icon">
          <i class="m-nav__link-icon la la-home"></i>
        </a>
      </li>
      <li class="m-nav__separator">
        -
      </li>
      <li class="m-nav__item">
        <a href="/" class="m-nav__link">
											<span class="m-nav__link-text">
												Dashboard
											</span>
        </a>
      </li>
      <li class="m-nav__separator">
        -
      </li>
      <li class="m-nav__item">
        <a href="" class="m-nav__link">
											<span class="m-nav__link-text">
												Edit Order
											</span>
        </a>
      </li>

    </ul>
<% end %>

<div class="m-content">
  <div class="row">
    <div class="col-lg-12">
      <!--begin::Portlet-->
      <div class="m-portlet">
        <div class="m-portlet__head">
          <div class="m-portlet__head-caption">
            <div class="m-portlet__head-title">
          												<span class="m-portlet__head-icon m--hide">
          													<i class="la la-gear"></i>
          												</span>
              <h3 class="m-portlet__head-text">
                Order by <%= @order.get_user_name %>, started on <%= @order.formatted_starttime %>, ended on <%= @order.formatted_endtime %>
              </h3>
            </div>
          </div>
        </div>

        <%= form_for(@order, html: {class: "m-form"}) do |form| %>
            <div class="m-portlet__body">
              <div class="m-form__section m-form__section--first">
                <div class="form-group m-form__group">
                  <label for="example_input_full_name">
                    Job Type:
                  </label>
                  <%= form.text_field :job_type, class: "form-control m-input", placeholder: "Enter full name" %>
                  <span class="m-form__help">
          														Please enter user's Job Type
          													</span>
                </div>
                <div class="form-group m-form__group">
                  <label>
                    Fixed Type:
                  </label>
                  <%= form.text_field :fixed_type, class: "form-control m-input", placeholder: "Enter email" %>

                  <span class="m-form__help">
          														Please enter user's Fixed Type
          													</span>
                </div>

                <div class="form-group m-form__group">
                  <label for="example_input_full_name">
                    Start Time:
                  </label>
                  <div class="input-group date">
                    <%= form.text_field :starttime, class: "form-control", id: "m_datetimepicker_3", placeholder: "Select date and time" %>

                    <div class="input-group-append">
                                   													<span class="input-group-text">
                                   														<i class="la la-calendar-check-o glyphicon-th"></i>
                                   													</span>
                    </div>
                  </div>
                  <span class="m-form__help">
          														Please enter user's Start Time
          													</span>
                </div>
                <div class="form-group m-form__group">
                  <label for="example_input_full_name">
                    End Time:
                  </label>
                  <div class="input-group date">
                    <%= form.text_field :endtime, class: "form-control m-input", id: "m_datetimepicker_2", placeholder: "Select date and time" %>
                    <div class="input-group-append">
                                   													<span class="input-group-text">
                                   														<i class="la la-calendar-check-o glyphicon-th"></i>
                                   													</span>
                    </div>
                  </div>
                  <span class="m-form__help">
          														Please enter user's End Time
          													</span>
                </div>

                <div class="form-group m-form__group">
                  <label>
                    Amount
                  </label>
                  <div class="input-group">
                    <div class="input-group-prepend">
          															<span class="input-group-text" id="basic-addon2">
          																$
          															</span>
                    </div>
                    <%= form.number_field :amount, id: :member_job_rate, class: "form-control m-input"  %>

                  </div>
                </div>
                <div class="form-group m-form__group">
                  <label>
                    Cost
                  </label>
                  <div class="input-group">
                    <div class="input-group-prepend">
          															<span class="input-group-text" id="basic-addon2">
          																$
          															</span>
                    </div>
                    <%= form.number_field :cost, id: :member_job_rate, class: "form-control m-input"  %>

                  </div>
                </div>
                <div class="form-group m-form__group">
                  <label>
                    Status
                  </label>
                  <div class="input-group">
                    <%= form.select :status, ['Cash', 'Credit'], class: "form-control m-input", id: "status-select"  %>

                  </div>
                </div>
                <% if @order.status == "Credit" %>
                <div class="form-group m-form__group" id="creditor_name">
                <% else %>
                <div class="form-group m-form__group" id="creditor_name" style="display:none;">
                <% end %>
                  <label>
                    Creditor Name
                  </label>
                  <div class="input-group">
                    <%= form.text_field :creditor_name, class: "form-control m-input"  %>

                  </div>
                </div>

              </div>
            </div>
            <div class="m-portlet__foot m-portlet__foot--fit">
              <div class="m-form__actions m-form__actions">
                <% if params[:redirect] == "back" %>
                  <%= hidden_field_tag(:redirect, 'back') %>
                <% end %>
                <%= form.submit "Update", class: "btn btn-primary" %>
                <%= link_to "Cancel", :back, class: "btn btn-secondary" %>

              </div>
            </div>
        <% end %>
        <!--end::Form-->
      </div>
      <!--end::Portlet-->

    </div>

  </div>
</div>
<script>
  
  $( document ).ready(function() {
    $("#order_status").on("change", function() {
console.log( "ready!" );
        $("#creditor_name").show();
  
      // Call form.submit here if need be
    });
  });
  
  </script>
