
<% content_for :breadcrumb do %>
    <ul class="m-subheader__breadcrumbs m-nav m-nav--inline">
      <li class="m-nav__item m-nav__item--home">
        <a href="#" class="m-nav__link m-nav__link--icon">
          <i class="m-nav__link-icon la la-home"></i>
        </a>
      </li>
      <li class="m-nav__separator">
        -
      </li>
      <li class="m-nav__item">
        <a href="/" class="m-nav__link">
											<span class="m-nav__link-text">
												Dashboard
											</span>
        </a>
      </li>
      <li class="m-nav__separator">
        -
      </li>
      <li class="m-nav__item">
        <a href="" class="m-nav__link">
											<span class="m-nav__link-text">
												Edit Order
											</span>
        </a>
      </li>

    </ul>
<% end %>

<div class="m-content">
  <div class="row">
    <div class="col-lg-12">
      <!--begin::Portlet-->
      <div class="m-portlet">
        <div class="m-portlet__head">
          <div class="m-portlet__head-caption">
            <div class="m-portlet__head-title">
          												<span class="m-portlet__head-icon m--hide">
          													<i class="la la-gear"></i>
          												</span>
              <h3 class="m-portlet__head-text">
                End Order
              </h3>
            </div>
          </div>
        </div>


        <%= form_for(@order, html: {class: "m-form"}) do |form| %>
            <div class="m-portlet__body">

              <div class="form-group m-form__group">
                <label for="exampleSelect1">
                  Status
                </label>
                <%= form.select :status, [['Cash (现金)', 'Cash'], ['Credit (挂单)', 'Credit']], {}, {class: "form-control m-input m-input--air m-input--pill", id: "payment-type"} %>

              </div>
              <div class="form-group m-form__group" id="business" style="display:none;">
                <label for="exampleSelect1">
                  Name
                </label>
                <%= form.text_field :creditor_name, class: "form-control m-input", placeholder: "名字 ／ 代号" %>

              </div>

            </div>
            <div class="m-portlet__foot m-portlet__foot--fit">
              <div class="m-form__actions m-form__actions">
                <% if @order.endtime == nil %>
                    <%= form.submit "End", class: "btn btn-danger btn-block", data: { disable_with: "Ending..." } %>
                <% else %>
                    <%= form.submit "Start", class: "btn btn-success btn-block", data: { disable_with: "Starting..." } %>
                <% end %>
              </div>
            </div>
        <% end %>
        <!--end::Form-->
        <% unless @order.add_order == true %>
        <% if @order.job_type == "Time Tracking"%>
        <div class="m-portlet__body">
        
        <div class="form-group m-form__group">
        <div class="m-form__actions m-form__actions">
          <div class="m-portlet__foot m-portlet__foot--fit">
            <%= link_to orders_add_order_path(id: @order.id), method: :post do %>
            <button class="btn btn-success btn-block">Add Order</button>
            <% end %>
          </div>
        </div>
        </div>
      </div>
        <% end %>
        <% end %>
      </div>
      <!--end::Portlet-->

    </div>

  </div>
</div>